<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/relLayout_check">


    <TextView
        android:id="@+id/check_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="user_id" />

    <TextView
        android:id="@+id/name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/check_id"
        android:layout_alignStart="@+id/check_id"
        android:layout_below="@+id/check_id"
        android:text="name_id" />

    <TextView
        android:id="@+id/check_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/check_id"
        android:layout_alignStart="@+id/check_id"
        android:layout_below="@+id/name_id"
        android:text="check_title" />

    <TextView
        android:id="@+id/user_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/check_id"
        android:layout_alignStart="@+id/check_id"
        android:layout_below="@+id/check_title"
        android:text="user_complete" />


</RelativeLayout>