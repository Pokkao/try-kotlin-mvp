<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="train.android.kotlin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="train.android.kotlin.module.main.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".module.webview.webActivity" />
        <activity android:name="train.android.kotlin.module.todo.todoAcitivity" />
        <activity android:name="train.android.kotlin.module.topost.topostActivity" />
        <activity android:name="train.android.kotlin.module.album.albumActivity" />
        <activity android:name=".grid.gridAlbumActivity" />
        <activity android:name=".module.main.gallery.activity.GalleryActivity"></activity>
        <activity android:name="train.android.kotlin.module.map.ActivityEditmap"></activity>
    </application>

</manifest>